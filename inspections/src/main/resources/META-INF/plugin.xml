<idea-plugin>
    <id>com.faendir.kotlin.autodsl.inspections</id>
    <name>Kotlin AutoDsl Inspections</name>
    <vendor email="support@faendir.com" url="https://faendir.com">F43nd1r</vendor>

    <description><![CDATA[
        <p>This Plugin provides correctness inspections for Kotlin DSL.</p>
        <p>
        To use this you need a Kotlin DSL receiver annotated with @DslInspect and @DslMandatory,
        like those generated by <a href="https://github.com/F43nd1r/autodsl">AutoDsl</a>.
        </p>
        <p>If you want to have inspections for your own DSL, add this gradle dependency:</p>
        <code>implementation("com.faendir.kotlin.autodsl:annotations:$latestVersion")</code>
        <p>Now you can add the annotations to your class. Have a look at the screenshots for an example.</p>
        ]]>
    </description>

    <idea-version since-build="211.6693"/>
    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                language="kotlin"
                displayName="Missing mandatory DSL properties"
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.faendir.kotlin.autodsl.inspections.DslInspection"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>